<!DOCTYPE html>
<html lang="nl-BE">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catch Pok√©mon</title>
    <link rel="stylesheet" href="/css/test.css">
    <link rel="stylesheet" href="/css/reset.css">
    <script src="/js/script.js" defer></script>
</head>

<body>
    <header>
        <button id="hamburger" aria-label="Open navigation menu" class="hamburger">&#9776;</button>
        <nav id="nav-menu" class="nav-menu">
            <ul>
                <li><a href="/catch">Pokemon Overview</a></li>
                <li><a href="/compare">Compare Pokemon</a></li>
                <li><a href="/guess">Guess</a></li>
                <li><a href="/battler">Battler</a></li>
            </ul>
        </nav>
    </header>


    <main class="main-content">
        <section class="pokemon-detail">
            <div class="container">
                <figure class="pokemon-image-container">
                    <img class="pokemon-image" src="<%= pokemon.image %>" alt="Image of <%= pokemon.name %>">
                </figure>
                <div class="pokemon-info-container">
                    <h1 class="pokemon-name"><%= pokemon.name %></h1>
                    <p class="pokemon-id">ID: <%= pokemon.id %></p>
                    <p class="pokemon-type">Type: <%= pokemon.types.map(t => t.type.name).join(', ') %></p>
                    <section class="pokemon-stats">
                        <ul>
                            <% pokemon.stats.forEach(stat => { %>
                                <li class="stat-item">
                                    <span class="stat-label"><%= stat.stat.name.toUpperCase() %>:</span>
                                    <span class="stat-value"><%= stat.base_stat %></span>
                                </li>
                            <% }); %>
                        </ul>
                    </section>
                </div>
            </div>
        </section>

        <section class="pokemon-buttons">
            <button onclick="location.href='/catch?pokemon=<%= pokemon.id %>'">Catch</button>
            <button onclick="location.href='/compare?pokemon=<%= pokemon.id %>'">Compare</button>
        </section>

        <aside class="pokemon-evolution">
            <h2>Evolution Chain</h2>
            <ul class="evolution-chain">
                <% evolutionChain.forEach(evo => { %>
                    <li>
                        <figure>
                            <img src="<%= evo.image %>" alt="<%= evo.name %>">
                            <figcaption><%= evo.name %></figcaption>
                        </figure>
                    </li>
                <% }); %>
            </ul>
        </aside>
    </main>

    <footer class="page-footer">
        <p>&copy; <%= new Date().getFullYear() %> Pokeverse. All rights reserved.</p>
    </footer>
</body>
</html>